@model Appet.Models.Note
@{
    ViewBag.Title = "Dodaj notatkę";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>@Html.ActionLink("⇦", "PetDetails", "Home", routeValues: new { id = ViewBag.Pet_id }, htmlAttributes: new { @style = "font-weight:bold;" }) Dodaj notatkę</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.pet_id)
        @Html.HiddenFor(model => model.user_id)
        @Html.HiddenFor(model => model.user_name)
        <div class="form-group">
            @Html.LabelFor(model => model.nnote, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nnote)
                @Html.ValidationMessageFor(model => model.nnote)
            </div>
        </div>
        @Html.HiddenFor(model => model.datetime)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-primary btn-md" />
            </div>
        </div>
    </div>
}